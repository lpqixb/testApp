.authDiv-bg{
  background:#333;
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  overflow:hidden;
  z-index:101;
  opacity:0.9; 
}

.authView{
  width:60%;
  /* height:250rpx; */
  border:2rpx solid #333;
  position:absolute;
  top:30%;
  left:20%;
  z-index:102;
}

.authView .authDiv{
  padding:10px;
  background:#fff;
}

.authView .authText{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size:100rpx;
  color:#333;
}

.authView .authBtn{
  font-size:26rpx;
  border:2rpx solid #333;
  border-radius:10rpx;
  background:#fff;
  text-align:center;
}

