.showblock-bg{
  background:#333;
  position:absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  overflow:hidden;
  z-index:101;
  opacity:0.9; 
}

.showblock-view{
  position:absolute;
  z-index:101;
  width:100%;
  height:100%;
  top:0px;
  left:0px;
}

.showblock-blockView{
  padding:50rpx;
  height: calc(100% - 150rpx);
}

.showblock-viewClass{
  background:#fff;
  padding:10rpx;
  height:100%;
  overflow:hidden;
  position:relative;

  
}

.showblock-title{
  font-size:35rpx;
  font-weight: 700;
}

.showblock-info{
  font-size:30rpx;
  font-weight: 100;
}

.showblock-viewClose{
  position:absolute;
  bottom:30rpx;
  left:calc(50% - 40rpx);

}

.showblock-viewClose .iconfont{
  font-size:80rpx;

}